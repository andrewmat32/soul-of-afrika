{
  "name": "soul-of-afrika",
  "version": "1.0.0",
  "description": "African safari trips website. Demo project for learning/showcase purposes.",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all build:css --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "sass css/style.prefix.css css/style.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css purgecss",
    "purgecss": "purgecss --css css/style.css --content *.html *.js --output css/style.purged.css"
  },
  "author": "Andrei",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0",
    "purgecss": "^7.0.2"
  },
  "dependencies": {
    "live-server": "^1.2.2",
    "sass": "^1.82.0"
  },
  "type": "module"
}
